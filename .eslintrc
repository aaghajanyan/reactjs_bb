{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended",    
                "plugin:react/recommended"
    ],
    "settings": {
        "react": {
          "version": "16.9.0"
        }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-trailing-spaces": 1,
		"no-duplicate-imports": 1,
        "semi": [2, "always"],
        "no-var": 2,
        "no-console": 0,
        "eqeqeq": 1,
        "no-alert": 0,
        "no-unused-expressions": 1,
        "no-unused-vars": 1
    }
}